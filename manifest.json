{
  "name": "WordStorage",
  "description": "Salve palavras e trechos de texto rapidamente enquanto navega para referência futura.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "action": {
    "default_title": "Abrir Relatório",
    "default_popup": "relatorio.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["report.html"],
      "matches": ["<all_urls>"]
    }
  ]
}